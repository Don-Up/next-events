// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String
  location    String
  date        DateTime
  image       String
  isFeatured  Boolean
}

model Comment {
  id        String   @id @default(cuid())
  email     String
  name      String
  comment   String
  eventId   String
  createdAt DateTime @default(now())
}
